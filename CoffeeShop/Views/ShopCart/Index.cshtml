@model ShopCartViewModel

<div class="container mt-4">
    @foreach (var el in Model.shopCart.listShopItems)
    {
        <div class="alert alert-warning mt-3">
            <b>Кофе:</b> @el.coffee.name<br />
            <b>Цена:</b> @el.coffee.price.ToString("c")
        </div>
    }
    <hr />
    <a  class="btn btn-danger mb-4" asp-controller="Order" asp-action="Checkout">Оплатить</a>
</div> 
